/* pages/index/index.wxss */

.section__banner image {
  width: 100%;
}

.section__title {
  padding: 10rpx 20rpx;
  border-bottom: solid 1rpx #CCC;
  text-align: center;
  background-color: white;
  color: #2DB94D;
}
.section__events__event {
  height: 300rpx;
  margin: 10rpx 20rpx;
  border-radius: 5rpx;
  border: solid 1px rgba(0, 0, 0, 0.5);
  box-shadow: 3rpx 3rpx 3rpx 3rpx grey;
  margin-top: 20px;
}

.section__events__event .event-details {
  width: 100%;
  padding: 20rpx;
  background-color: white;
  color: grey;
}
.section__events__event .event-title{
  font-weight: bolder;
}
.section__events__event .event-date {
  margin-top: 20px;
}
.section__events__event .event-location{
  margin-top: 60px;
  text-align: right;
}

.event-poster image {
  width: 400rpx;
  height: 300rpx;
}
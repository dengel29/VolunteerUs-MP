/* pages/index/index.wxss */

.section-container {
  background-color: #FAFAFA;
}
.section__banner image {
  width: 100%;
}

.section__title {
  padding: 10rpx 20rpx;
  text-align: left;
  background-color: white;
  color: #051C0A;
}
.section__events__event {
  height: 270rpx;
  margin: 10rpx 20rpx;
  border-radius: 5rpx;
  border: solid 1px rgba(0, 0, 0, 0.5);
  box-shadow: 1rpx 1rpx 1rpx 1rpx grey;
  margin-top: 20px;
}

.section__events__event .event-title{
  font-weight: bolder;
  font-size: large;
  color: #051C0A;
  height: 105rpx;
  overflow: hidden;
}
.section__events__event .event-category {
  color: #FFF;
  display: inline-block;
  background-color: slategrey;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
}
.section__events__event .event-date {
  color:#98aa9c;
}
.section__events__event .event-location{
  color: #98aa9c;
}
.section__events__event .event-details {
  width: 100%;
  padding: 20rpx;
  background-color: white;
  color: #98aa9c;
}
.event-poster image {
  width: 350rpx;
  height: 250rpx;
  padding: 10rpx 10rpx;
}

.icon {
  width: 30rpx;
  height: 30rpx;
}
<!--pages/signup/signup.wxml-->
<view class="header">
 <view class="h1-header">Sign up</view>
</view>
<view class="container">  
  <view class="usermotto">  
    <text class="user-motto">{{motto}}</text>  
    Full name：  
    <view class="section">
      <input type="text" bindinput="userNameInput"/>  
    </view>
    Email：  
    <view class="section">
     <input type="text" bindinput="userNameInput"/>  
    </view>
    Phone number：  
    <view class="section">
     <input type="text" bindinput="userNameInput"/> 
    </view> 
    age:
    <view class="section">
     <input type="text" bindinput="userNameInput"/>  
    </view>
    University:
    <view class="section">
      <input type="text" bindinput="userPasswordInput" password="true"/> 
    </view>  
  </view>  
</view>  
<form bindsubmit="formSubmit">
   <button formType="submit">申请志愿</button>   
</form>